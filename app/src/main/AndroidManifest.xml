<?xml version="1.0" encoding="utf-8"?>
<manifest
		xmlns:android="http://schemas.android.com/apk/res/android"
		package="de.alphabetapeter.tinydash"
>
	<uses-permission android:name="android.permission.READ_CALENDAR" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<application
			android:allowBackup="false"
			android:icon="@mipmap/ic_launcher"
			android:label="@string/app_name"
			android:supportsRtl="true"
			android:theme="@style/AppTheme"
	>
		<activity android:name=".MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
			</intent-filter>
		</activity>
		<activity android:name=".WidgetConfigurationActivity" android:label="@string/configure_widget">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
			</intent-filter>
		</activity>

		<receiver
				android:icon="@mipmap/ic_launcher"
				android:label="TinyDash Calendar 4 x 2"
				android:name=".widget.TinyDashWidgetProvider_42"
				android:permission="android.permission.BIND_REMOTEVIEWS"
		>
			<intent-filter>
				<action android:name="de.alphabetapeter.tinydash.action.APPWIDGET_UPDATE"/>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
			</intent-filter>

			<meta-data
					android:name="android.appwidget.provider"
					android:resource="@xml/widget_info_4_2"
			/>
		</receiver>

		<receiver
				android:icon="@mipmap/ic_launcher"
				android:label="TinyDash Calendar 2 x 2"
				android:name=".widget.TinyDashWidgetProvider_22"
				android:permission="android.permission.BIND_REMOTEVIEWS"
		>
			<intent-filter>
				<action android:name="de.alphabetapeter.tinydash.action.APPWIDGET_UPDATE"/>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
			</intent-filter>

			<meta-data
					android:name="android.appwidget.provider"
					android:resource="@xml/widget_info_2_2"
			/>
		</receiver>

		<service android:name=".widget.TinyDashRemoteService"
				 android:permission="android.permission.BIND_REMOTEVIEWS" />
	</application>
</manifest>